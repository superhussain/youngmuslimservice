body.page-past-events #main
  section
    .section-content, .section-cta
      width: 100%
      max-width 800px
      margin 0 auto
  
  section.gallery
    background-color $light-1
    padding: 6em 0
    color $dark
    > .wrapper
      max-width 1200px
      // display flex
    .gallery__controls
      width 100%
      max-width 500px
      margin 0 auto 5em
      @media desktop
        width 300px
        max-width none
        margin initial
        padding-top 9em
        padding-right 3em
        position absolute
      &.fixed
        position fixed
        top 60px
    .gallery__list
      background-color rgba($black, 0.05)
      list-style none
      padding 3em
      @media desktop
        padding 3em 2em
    .gallery__item > a
      color rgba($black, 0.3)
      font-weight 900
      text-decoration none
      text-transform uppercase
      letter-spacing 1px
      transition 200ms ease-in-out
      &:hover
        color rgba($black, 0.5)
    .gallery__item.active > a
      color $orange
      &:before
        content 'Â» '
    .gallery__images
      width 100%
      @media desktop
        padding-left 300px
      > div
        display none
        &.active
          display block
      h2
        font-weight 600
        position relative
        margin-bottom 2em
        &:after
          content ''
          position absolute
          bottom -0.45em
          width 100px
          left 0
          background-color $orange
          padding: 3px
      .retreat__video
        position relative
        width: 100%
        height 0
        max-width 480px
        margin 0 auto 4em
        padding-bottom 56.25%
        @media mobile
          padding-bottom 52%
        @media phablet
          padding-bottom 44%
        @media tablet
          padding-bottom 32%
        @media desktop
          min-width 400px
          // padding-bottom 25.5%
        iframe
          position absolute
          width 100%
          height 100%;
          left 0
          top 0
          border-radius 0.5em
          box-shadow 0 50px 50px -40px rgba($black, 0.25)
          transform scale(0.99)
          transition 200ms ease-in-out
          &:hover
            transform scale(1)
            box-shadow 0 60px 70px -55px rgba($black, 0.25)