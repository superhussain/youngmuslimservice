body.page
  section.content
    .hms-testimonial-container
      background-color $light-2
      margin: 3em 0
      padding 3em
      display flex
      flex-wrap wrap
      justify-content center
      align-items center
      .image
        object-fit cover
        object-position top
        border-radius 50%
        margin-right 1em
        box-shadow 0 0 1em rgba($black, 0.25)
      .author
        line-height 1
        font-size 0.8em
        strong
          font-size 1.5em
          font-weight 600
      .testimonial
        padding-top: 2em
        font-weight 300